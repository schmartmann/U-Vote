<div class="rankings">
  <div id="rankings-logo-div">
    <img src="/img/UVoteLogo.png" style="border:none;height:113px;width:250px; " />
  </div>

  <h1 id="rankings-copy">
    Check out how your school ranks:
  </h1>

  <% if @searchResults.nil? %>
    <form method="get" class="search-bar" action="/rankings">
      <input class="search_form" name="search_form" type="text">
      <input type="submit" class="school-search-button" value="Search">
    </form>
  <% else %>
    <form method="get" class="search-bar" action="/rankings">
      <input class="search_form" name="search_form" type="text" value="Search schools by name!">
      <input type="submit" class="school-search-button" value="Search">
    </form>
    <h1 id="rankings-copy">
       Search Results:
    </h1>

    <table class="uni-part">
      <tr><th>Rank</th><th>University</th><th>Student Registeration (relative to average)</th></tr>
      <% @searchResults.each_with_index do |school, index| %>
      <tr><th></th><td><%=school[:school]%></td><td><%= school[:participation].to_i/@average.to_i%></td></tr>
      <% end %>
    </table>
  <% end %>

  <h1 id="rankings-copy">
     SO FAR 2016
  </h1>

  <br>

<% if @user_school.nil? %>
  <table class="uni-part">
    <tr><th>Rank</th><th>University</th><th>Student Registeration (relative to average)</th></tr>
    <% @schools.each_with_index do |school, index| %>
    <tr><th><%=index + 1%></th><td><%=school.instnm%></td><td><%= school.participation.to_i/@average.to_i%></td></tr>
    <% end %>
  </table>

<% else %>
  <h1 id="rankings-copy">
     Your school, so far!
  </h1>

  <table class="uni-part">
    <tr><th>Rank</th><th>University</th><th>Student Registeration (relative to average)</th></tr>
    <tr><th><%=@user_school.id%></th><td><%=@user_school.instnm%></td><td><%=@user_school.participation.to_i/@average.to_i%></td></tr>
  </table>
    <br>

  <h1 id="rankings-copy">
     The Top 5 Schools, Nationally:
  </h1>

  <table class="uni-part">
    <tr><th>Rank</th><th>University</th><th>Student Registeration (relative to average)</th></tr>
    <% @top_five_schools.each_with_index do |school, index| %>
    <tr><th><%=index + 1%></th><td><%=school.instnm%></td><td><%= school.participation.to_i/@average.to_i %></td></tr>
    <% end %>
  </table>
    <br>


  <h1 id="rankings-copy">
     All schools:
  </h1>

  <table class="uni-part">
    <tr><th>Rank</th><th>University</th><th>Student Registeration (relative to average)</th></tr>
    <% @schools.each_with_index do |school, index| %>
    <tr><th><%=index + 1%></th><td><%=school.instnm%></td><td><%= school.participation.to_i/@average.to_i %></td></tr>
    <% end %>
  </table>
<% end %>
</div>
